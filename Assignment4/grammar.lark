?start: exp

?exp: exp "+" exp1            -> plus
   | exp "-" exp1             -> minus
   | exp1

?exp1: "\\" NAME "." exp1             -> lam
      | exp2            
?exp2: exp2 exp3                    -> app
      | exp3
?exp3: NAME                         -> var
      | "(" exp ")"

NAME: /[a-z_][a-zA-Z0-9_]*/         # names cannot start with upper case

COMMENT: /--[^\n]*/                 // comments start with --
%ignore COMMENT
%import common.WS
%ignore WS

